pipeline {
    agent {
        docker {
            image 'eljemlihoussam/php-composer-symfony:8.2'
            args '-u root' // Pour éviter les erreurs de permission dans le container
        }
    }

    environment {
        DOCKER_IMAGE = 'eljemlihoussam/crm-symfony'
        DOCKER_TAG = "${BUILD_NUMBER}"
    }

    tools {
        git 'Default' // Assure que Git est utilisé même si non configuré
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    composer install --no-interaction --prefer-dist --no-scripts
                    php bin/console cache:clear || true
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}")
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-credentials') {
                        docker.image("${DOCKER_IMAGE}:${DOCKER_TAG}").push()
                        docker.image("${DOCKER_IMAGE}:latest").push()
                    }
                }
            }
        }

        // ❗Décommente cette partie uniquement si Ansible est configuré dans Jenkins
        /*
        stage('Deploy with Ansible') {
            steps {
                ansiblePlaybook(
                    playbook: 'deploy.yml',
                    inventory: 'inventory.ini',
                    extras: [
                        "docker_image=${DOCKER_IMAGE}",
                        "docker_tag=${DOCKER_TAG}"
                    ]
                )
            }
        }
        */
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo '✅ Pipeline completed successfully!'
        }
        failure {
            echo '❌ Pipeline failed!'
        }
    }
}

{% extends 'base.html.twig' %}

{% block title %}Nouvelle facture{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-header {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            color: white;
            padding: 2rem;
            margin-bottom: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }
        .form-section {
            background: white;
            padding: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            margin-bottom: 2rem;
        }
        .form-section h3 {
            color: #4e73df;
            margin-bottom: 1.5rem;
            font-size: 1.25rem;
        }
        .required-field::after {
            content: " *";
            color: #e74a3b;
        }
        .btn-submit {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            transition: all 0.2s;
        }
        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            color: white;
        }
        .form-control:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="page-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 mb-0">Nouvelle facture</h1>
                    <p class="mb-0">Créez une nouvelle facture pour votre client</p>
                </div>
                <a href="{{ path('app_facture_index') }}" class="btn btn-light">
                    <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>
        </div>

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="form-section">
                        <h3>Informations générales</h3>
                        <div class="mb-3">
                            {{ form_label(form.numero, 'Numéro de facture', {'label_attr': {'class': 'form-label required-field'}}) }}
                            {{ form_widget(form.numero, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.numero) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label required-field'}}) }}
                            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.date) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.montant, 'Montant', {'label_attr': {'class': 'form-label required-field'}}) }}
                            {{ form_widget(form.montant, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.montant) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.client, 'Client', {'label_attr': {'class': 'form-label required-field'}}) }}
                            {{ form_widget(form.client, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.client) }}
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-section">
                        <h3>Détails supplémentaires</h3>
                        <div class="mb-3">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.description) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.note, 'Note', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.note) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-end mt-4">
                <button type="submit" class="btn btn-submit">
                    <i class="fas fa-save me-2"></i>Enregistrer la facture
                </button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

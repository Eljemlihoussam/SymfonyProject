{% extends 'base.html.twig' %}

{% block title %}Nouveau client{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4">
        <h1>Nouveau client</h1>
        <a href="{{ path('app_client_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
    </div>

    <div class="card shadow mb-4 mt-4">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.nomGerant, {
                            'label': 'Nom et prénom du gérant',
                            'attr': {
                                'placeholder': 'Entrez le nom et prénom du gérant'
                            }
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.raisonSociale, {
                            'label': 'Raison sociale',
                            'attr': {
                                'placeholder': 'Entrez la raison sociale'
                            }
                        }) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.email, {
                            'label': 'Email',
                            'attr': {
                                'placeholder': 'Entrez l\'adresse email'
                            }
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.telephone, {
                            'label': 'Téléphone',
                            'required': false,
                            'attr': {
                                'placeholder': 'Entrez le numéro de téléphone'
                            }
                        }) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.adresse, {
                            'label': 'Adresse',
                            'required': false,
                            'attr': {
                                'placeholder': 'Entrez l\'adresse complète',
                                'rows': 3
                            }
                        }) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.ville, {
                            'label': 'Ville',
                            'attr': {
                                'placeholder': 'Entrez la ville'
                            }
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.pays, {
                            'label': 'Pays',
                            'attr': {
                                'placeholder': 'Entrez le pays'
                            }
                        }) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        {{ form_row(form.notes, {
                            'label': 'Notes',
                            'required': false,
                            'attr': {
                                'placeholder': 'Ajoutez des notes ou commentaires',
                                'rows': 3
                            }
                        }) }}
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %} 